<%- include('partials/header') %>

<div class="container-fluid">
  <div class="row">
    <div class="col-3 bg-light">
      <div class="container p-4">
        <ul class="nav nav-pills profile-nav">
          <li class="nav-item">
            <a class="nav-link" href="/dashboard">
              <div class="nav-icon">
                <i class="fal fa-chart-network"></i>
              </div>
              Dashboard
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/profile">
              <div class="nav-icon">
                <i class="fal fa-user-circle"></i>
              </div>
              Profile
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/profile/settings">
              <div class="nav-icon">
                <i class="fal fa-cogs"></i>
              </div>
              Settings
            </a>
          </li>
          <div class="dropdown-divider"></div>
          <li class="nav-item">
            <a class="nav-link" href="/support">
              <div class="nav-icon">
                <i class="fal fa-life-ring"></i>
              </div>
              Support
            </a>
          </li>
          <div class="dropdown-divider"></div>
          <li class="nav-item">
            <a class="nav-link active" href="/administrator">
              <div class="nav-icon">
                <i class="fal fa-key"></i>
              </div>
              Administrator
            </a>
          </li>
        </ul>
      </div>
    </div>
    <div class="col">
      <div class="container p-4">
        <h2>Settings</h2>
        <% if(message.length > 0) { %>
          <%- include('partials/message') %>
        <% } %>
        <form action="/api/edit-profile" method="POST">
          <div class="form-group">
            <label>Email<i class="fas fa-question-circle ml-2 text-muted" data-toggle="tooltip" data-html="true" data-placement="right" title="<span class='small text-white'>You cannot change your email address</small>"></i></label>
            <input type="email" class="form-control" name="email" value="<%= result.email %>" disabled>
          </div>
          <div class="form-group">
            <div class="form-row">
              <div class="col">
                <label>First Name</label>
                <input type="text" class="form-control" name="firstName" value="<%= result.name.first %>" />
              </div>
              <div class="col">
                <label>Last Name</label>
                <input type="text" class="form-control" name="lastName" value="<%= result.name.last %>" />
              </div>
            </div>
          </div>
          <button type="submit" class="btn btn-primary">Submit Changes</button>
        </form>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>