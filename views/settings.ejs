<%- include('partials/header') %>

<div class="container-fluid">
  <div class="row">
    <%- include('partials/sidebar') %>
    <div class="col">
      <div class="container p-4">
        <h2>Settings</h2>
        <% if(message.length > 0) { %>
          <%- include('partials/message') %>
        <% } %>
        <form action="/api/edit-profile" method="POST">
          <div class="form-group">
            <label>Email<i class="fas fa-question-circle ml-2 text-muted" data-toggle="tooltip" data-html="true" data-placement="right" title="<span class='small text-white'>You cannot change your email address</small>"></i></label>
            <input type="email" class="form-control" name="email" value="<%= user.email %>" disabled>
          </div>
          <div class="form-group">
            <div class="form-row">
              <div class="col">
                <label>First Name</label>
                <input type="text" class="form-control" name="firstName" value="<%= user.name.first %>" />
              </div>
              <div class="col">
                <label>Last Name</label>
                <input type="text" class="form-control" name="lastName" value="<%= user.name.last %>" />
              </div>
            </div>
          </div>
          <button type="submit" class="btn btn-primary">Submit Changes</button>
        </form>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>